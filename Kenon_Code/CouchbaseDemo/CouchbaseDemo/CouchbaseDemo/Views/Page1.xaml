<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CouchbaseDemo.Views.Page1">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="First Name:" />
            <Entry Text="{Binding NewPerson.FirstName}"/>
            <Label Text="Last Name:"/>
            <Entry Text="{Binding NewPerson.LastName}"/>
            <Label Text="Phone Number:"/>
            <Entry Text="{Binding NewPerson.PhoneNumber}" Keyboard="Keyboard.Telephone"/>
            <Button Text="Add Person" Command="{Binding AddPerson}"/>
            <Button Text="View People" Command="{Binding ViewPeople}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>